<!-- Vamos a recorrer el objeto notes para mostrar la información que queramos -->
<!-- Utilizamos sintaxis handlebars para ello. -->
<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between
                    align-items-center">
                    {{title}}
                    <!-- Concatenamos el id para que nos envie a la ruta única de la nota.-->
                    <a href="/notes/edit/{{_id}}">
                        <i class="fa
                            fa-pencil">
                        </i>
                    </a>
                </h4>
                <p>{{description}}</p>
                <!-- Mantenemos el método post para poder usar el method-override configurado en el server.
                    tal que nos recibe un query por el _method.
                 -->
                <form action="/notes/delete/{{_id}}?_method=DELETE"
                    method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block
                        btn-sm">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>